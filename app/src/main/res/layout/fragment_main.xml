<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.mvnshrikanth.theblooddonor.ui.MainFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout_options"
        style="@style/CategoryTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_tablayout"
        android:layout_marginStart="@dimen/margin_tablayout"
        android:layout_marginTop="@dimen/margin_tablayout"
        app:tabGravity="fill" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_viewpager"
        android:layout_marginStart="@dimen/margin_viewpager"
        android:layout_marginTop="@dimen/margin_viewpager" />

</LinearLayout>
